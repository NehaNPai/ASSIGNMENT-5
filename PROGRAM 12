def convert_to_uppercase(s):
    upper_count = 0
    for c in s[:4]:
        if c.isupper():
            upper_count += 1
    if upper_count >= 2:
        return s.upper()
    else:
        return s
my_string = "HeLlo, World!"
print(convert_to_uppercase(my_string))  
my_string2 = "AbcD"
print(convert_to_uppercase(my_string2))  
